{
  "rewrites": [
    {
      "source": "/api/download/:path*",
      "destination": "https://dramabox-api-rho.vercel.app/download/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://dramabox-api-rho.vercel.app/api/:path*"
    },
    {
      "source": "/stream-api/:path*",
      "destination": "/api/stream?endpoint=:path*"
    }
  ]
}